<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_print"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/iv_print"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:text="密码登录"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_cancel"
            android:id="@+id/tv_use_password"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
        <TextView
            app:layout_constraintLeft_toRightOf="@id/tv_use_password"
            android:id="@+id/tv_cancel"
            android:text="取消"
            android:padding="10dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>